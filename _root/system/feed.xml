<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:dc="http://purl.org/dc/elements/1.1/">
	<channel>
		<title>SUDO</title>
		<description></description>	
		<link>{{ site.url }}</link>
		<atom:link href="{{ site.url }}/feed.xml" rel="self" type="application/rss+xml" />
		{% for post in site.posts limit:10 %}
			<item>
				<title>{{ post.title | xml_escape }}</title>
				<dc:creator>{{ post.author | xml_escape }}</dc:creator>      
				<description>&lt;p&gt;&lt;img width="370" src="{{ site.url }}/assets/post{{post.url}}/{{post.image}}" /&gt; {{ post.summary | xml_escape }}&lt;/p&gt;</description>
				<pubDate>{{ post.date | append: ':00' | date_to_rfc822 }}</pubDate>
				<link>{{ site.url }}{{ post.url }}</link>
				<guid isPermaLink="true">{{ site.url }}{{ post.url }}</guid>
				{% for tag in post.tags %}
		        	<category>{{ tag | xml_escape }}</category>
		        {% endfor %}
			</item>
		{% endfor %}
	</channel>
</rss>
